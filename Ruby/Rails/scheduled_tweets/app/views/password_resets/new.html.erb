<h1>Reset your password</h1>

<%= form_with url: password_reset_path do |form| %>

        <div class="mb-3">
            <%= form.label :email %>
            <%= form.text_field :email, class:"form-control", placeholder: "enter email" %>
        </div>

    <div class="mb-3">
        <%= form.submit "Reset Password", class: "btn btn-primary" %>
    </div>
<% end %>